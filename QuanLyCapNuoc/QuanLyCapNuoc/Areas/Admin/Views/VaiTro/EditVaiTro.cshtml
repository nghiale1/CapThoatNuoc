@model Model.EF.VaiTro
@{
    ViewBag.Title = "EditVaiTro";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@section header{
    Cập Nhật Vai Trò
}

@using (Html.BeginForm("EditVaiTro", "VaiTro"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>VaiTro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.vt_ten, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.vt_id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.EditorFor(model => model.vt_ten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vt_ten, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay về", "HienThiVaiTro")
</div>