@model Model.EF.dongho 

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin/DongHo/Index">Đồng Hồ</a></li>
        <li class="breadcrumb-item active">Tạo Mới</li>
    </ol>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.kh_id,"Nhập ID Khách Hàng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.kh_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kh_id, "( 123456 )", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dh_thuonghieu,"Nhập Thương Hiệu Đồng Hồ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dh_thuonghieu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dh_thuonghieu, "( casio )", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dh_maso,"Mã Số Đồng Hồ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dh_maso, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dh_maso, "( 12345 )", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dh_ngaylap,"Ngày Lắp Đặt", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dh_ngaylap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dh_ngaylap, "( 2020-10-10 )", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dh_ngaykiemdinh, "Ngày Kiểm Định", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dh_ngaykiemdinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dh_ngaykiemdinh, "( 2020-10-10 )", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạp Mới" class="btn btn-primary btn-block" />
            </div>
        </div>
    </div>
}

