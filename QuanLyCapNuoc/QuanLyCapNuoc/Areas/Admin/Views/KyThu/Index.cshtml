@model PagedList.IPagedList<Model.EF.kythu>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin/KyThu/Index">Kỳ Thu</a></li>
        <li class="breadcrumb-item active">Danh sách</li>
    </ol>
}
<div class="card mb-4">
    <div class="card-header">
        <a class=" btn btn-success" href="/Admin/KyThu/Create">
            <i class="fas fa-plus"></i>
            Thêm kỳ Thu mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID Kỳ Thu</th>
                        <th>Kỳ Ghi ID</th>
                        <th>Lần Thu</th>
                        <th>Ngày Thu</th>
                        <th>Trạng Thái</th>
                        <th>sửa</th>
                        <th>Xóa</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID Kỳ Thu</th>
                        <th>Kỳ Ghi ID</th>
                        <th>Lần Thu</th>
                        <th>Ngày Thu</th>
                        <th>Trạng Thái</th>
                        <th>sửa</th>
                        <th>Xóa</th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.kt_id</td>
                            <td>@i.k_id</td>
                            <td>@i.kt_lanthu</td>
                            <td>@i.kt_ngaythu</td>
                            <td>@i.kt_trangthai</td>

                            <td><a class="btn btn-warning" href="/Admin/KyThu/Edit/@i.kt_id">Sửa</a></td>

                            <td>
                                <form action="/Admin/KyThu/Delete/@i.kt_id" method="post">
                                    <input class="btn btn-danger" type="submit" value="Xóa" />
                                </form>
                            </td>

                        </tr>
                    }




                </tbody>
            </table>
        </div>
    </div>
</div>
