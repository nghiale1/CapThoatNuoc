@model Model.EF.lotrinh
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<Model.EF.khuvuc> kv = ViewData["listkv"] as List<Model.EF.khuvuc>;
}

@section header{

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin/LoTrinh/Index">Lộ Trình</a></li>
        <li class="breadcrumb-item active">Tạo Mới</li>
    </ol>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.kv_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" id="kv_id" name="kv_id">
                    @foreach (var i in kv)
                    {
                    <option value=@i.kv_id>@i.kv_ten _ @i.phuong.p_ten _ @i.phuong.quan.q_ten _ TP.@i.phuong.quan.tinh.t_ten</option>
                    }
                </select>
               @* @Html.ValidationMessageFor(model => model.kv_id, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nv_id,"Nhập ID nhân Viên Quản Lý Lộ Trình", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nv_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nv_id, "( 123 )", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.lt_ten,"Nhập Tên Lộ Trình", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.lt_ten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lt_ten, "( Lộ Trình 1 )", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.lt_ghichu,"Nhập Ghi Chú Của Lộ Trình", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.lt_ghichu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lt_ghichu, "( ... )", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo Mới" class="btn btn-primary btn-block" />
            </div>
        </div>
    </div>
}

